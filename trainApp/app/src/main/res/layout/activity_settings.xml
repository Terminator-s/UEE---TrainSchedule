<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Settings">

    <TextView
            android:text="Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Settings" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.045"
            android:textSize="24sp" android:textStyle="bold"
            android:textColor="@color/design_default_color_primary_dark"/>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation"/>
    <TextView
            android:text="RATING"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settings_rating" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="1dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.084"
            android:textStyle="bold" android:textAlignment="viewStart"
            android:textSize="14sp" android:textColor="@android:color/background_dark" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Settings" app:layout_constraintVertical_bias="0.006"/>
    <RatingBar
            android:layout_width="249dp"
            android:layout_height="45dp"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="1.0"
            android:id="@+id/ratingBar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="1dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/settings_rating"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/navigation"
            app:layout_constraintHorizontal_bias="0.196" app:layout_constraintVertical_bias="0.0"/>
